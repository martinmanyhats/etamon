<%= form_for([@boiler, @var]) do |f| %>
  <% if @var.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@var.errors.count, "error") %> prohibited this var from being saved:</h2>

      <ul>
      <% @var.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
