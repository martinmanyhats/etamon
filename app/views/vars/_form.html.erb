      <div>
      	<%= check_box_tag "var[mapping_ids][]", mapping.id, @var.mappings.include?(mapping) %>
        <%= mapping.path %>
      </div>
    <% end %>
  </div>
  <div class="field">
  	
  </div>
  <div class="field">
    <%= f.label :last_set_date %><br>
    <%= @var.last_set_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
