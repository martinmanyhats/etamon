<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @boiler.name %>
</p>

<p>
  <b>API:</b>
  <%= @boiler.api %>
</p>

<p>
	<b>State:</b>
	<%= @boiler.get_value_with_URI('40/10261/0/0/12000') %>
</p>

<table>
  <thead>
	<tr>
		<th>Path</th>
		<th>Value</th>
	</tr>
  </thead>
  <tbody>
	<% @boiler.mappings.select{|m| m.important}.each do |mapping| %>
      <tr>
	    <td><%= mapping.path %></td>
	    <td><%= mapping.get_formatted_value %></td>
	  </tr>
	<% end %>
  </tbody>
</table>
<br />
<%= link_to 'Edit', edit_boiler_path(@boiler) %> |
<%= link_to 'Back', boilers_path %>
